@model LoginUser
<div class="container d-flex justify-content-center">
    <form asp-action="UserLogin" asp-controller="Home" method="post" class="login-form">
        <div class="mb-3">
            <label asp-for="LEmail">Email</label>
            <input asp-for="LEmail" class="form-control">
            <span asp-validation-for="LEmail" class="text-dark"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LPassword">Password</label>
            <input asp-for="LPassword" class="form-control">
            <span asp-validation-for="LPassword" class="text-dark"></span>
        </div>
        <input type="submit" value="Login" class="btn btn-primary m-2">
    </form>
</div>