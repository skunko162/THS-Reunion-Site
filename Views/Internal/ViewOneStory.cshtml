@{
    ViewData["Title"] = "Home Page";
    Layout= "_InnerLayout";
}

@model Story
<div class="container d-flex flex-column align-items-center">
    <div >
        <p class= "page-title-formatting m-5">Where I am Now!</p>
    </div>
    <div class="d-flex flex-column p-3 border align-self-center rounded shadow m-3" style= "background: #f5f5f5; width:600px">
        <div class="d-flex flex-column align-content-center m-1">
            <p class="d-flex align-self-center"><strong style="font-size: 20px;">@Model.Creator.FirstName @Model.Creator.LastName</strong></p>
            <img src="@Model.ImageUrl" alt="" class="rounded shadow ViewOne-Img-Size">
        </div>
        <div class="m-3 border wrap-it">
            <p><strong style="font-size: 20px;">My Story:</strong></p>
            @Model.Content
        </div>
        <div class = "d-flex justify-items-end">
            <div class = "m-1">
                @if(Model.UserId == Context.Session.GetInt32("UserId"))
                {
                    <form asp-action="DestroyStory" asp-controller="Internal" asp-route-StoryId= "@Model.StoryId" method="post" class="ps-2">
                        <input type="submit" value="x" class="btn btn-danger mr-3">
                    </form>
                }
            </div>
            <div class= "m-1">
                @if(Model.UserId == Context.Session.GetInt32("UserId"))
                {
                    <a href="/stories/@Model.StoryId/edit" class="btn btn-info">Edit</a>
                }
            </div>
        </div>
    </div>
</div>